{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "typeRoots": [
  "./node_modules/@types",
  "./src/types"
],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "src/*": [
        "src/*"
      ],
      "components/*": [
        "src/components/*"
      ],
      "utils/*": [
        "src/components/lib/utils/*"
      ],
      "ui/*": [
        "src/components/ui/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "build"
  ],
  "include": [
    "tailwind.config.ts",
    "postcss.config.js",
    ".eslintrc.json",
    "src"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}